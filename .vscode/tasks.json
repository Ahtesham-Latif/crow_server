{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure",
      "type": "shell",
      "command": "cmake -G \"MinGW Makefiles\" ..",
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "label": "CMake: build",
      "type": "shell",
      "command": "mingw32-make -j8",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "dependsOn": ["CMake: configure"]
    }
  ]
}
