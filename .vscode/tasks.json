{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure",
      "type": "shell",
      "command": "cmake -G \"MinGW Makefiles\" ..",
      "options": {
        "cwd": "${workspaceFolder}/build"
      }
    },
    {
      "label": "CMake: build",
      "type": "shell",
      "command": "mingw32-make -j4",
      //uses -j4 to use less CPU cores for building to avoid overheating
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "dependsOn": ["CMake: configure"]
    }
  ]
}
